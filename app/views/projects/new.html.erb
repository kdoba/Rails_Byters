<% provide(:title, "Create New Project") %>

<h3 id="page_header">Create New Project</h3>

<fieldset>
  <%= form_for @project do |f| %>
        <div class="row">
          <div class="large-12 columns">
            <%= f.label :name, class: "project_field_label" %>
            <%= f.text_field :name %>
          </div>
        </div>
        <div class="row">
          <div class="large-12 columns">
            <%= f.label :description, class: "project_field_label" %>
            <%= f.text_area :description %>
          </div>
        </div>
        <div class="row">
          <div class="large-12 columns">
            <%= f.label :lifecycle_id, class: "project_field_label" %>
            <%= f.select :lifecycle_id, @lifecycles.collect{ |l| [l.name, l.id] } %>
          </div>
        </div>
        <div class="row">
          <div class="large-2 large-offset-10 columns">
            <input class="tiny button" type="submit" name="Submit" value="Submit">
          </div>
        </div>
    <!--</form>-->
    <% end %>
</fieldset>