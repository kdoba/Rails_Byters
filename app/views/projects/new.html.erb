<p id="error"><%= flash[:error] %></p>
<% provide(:title, "Create New Project") %>
<form id="project_create_form" action="/projects/create" method="post">
<div>
  <label class="project_field_label">Name</label>
  <input type="text" id="name" name="name" />
</div>
<div>
  <label class="project_field_label">Description</label>
  <input type="text" id="description" name="description" />
</div>
<div>
  <label class="project_field_label">Lifecycle</label>
  <select id="lifecycle" name= "lifecycle_id" >
    <% @lifecycles.each_with_index do |lifecycle, index| %>
    <option value = <% index %> ><%= lifecycle.name %></option>
    <% end %>
  </select>
</div>
<div>
  <input type="submit" name="Submit" value="Submit">
</div>
</form>